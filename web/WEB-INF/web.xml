<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddUserController</servlet-name>
        <servlet-class>controllers.user.AddUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>controllers.common.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllSkillController</servlet-name>
        <servlet-class>controllers.common.ViewAllSkillController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateSkillController</servlet-name>
        <servlet-class>controllers.admin.CreateSkillController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSkillController</servlet-name>
        <servlet-class>controllers.admin.UpdateSkillController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserController</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>/changepass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllSkillController</servlet-name>
        <url-pattern>/viewAllSkill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateSkillController</servlet-name>
        <url-pattern>/createSkillController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateSkillController</servlet-name>
        <url-pattern>/updateSkillController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>views/user/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
